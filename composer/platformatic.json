{
  "$schema": "https://schemas.platformatic.dev/@platformatic/composer/2.62.1.json",
  "server": {
    "http2": true,
    "https": {
      "allowHTTP1": true,
      "requestCert": false,
      "rejectUnauthorized": false,
      "key": { "path": "server.key" },
      "cert": { "path": "server.crt" }
    }
  },
  "composer": {
    "services": [
      {
        "id": "fastify2",
        "proxy": {
          "prefix": "/fastify"
        }
      },
      {
        "id": "fastify3",
        "proxy": {
          "prefix": "/tsfastify"
        },
        "openapi": {
          "url": "/documentation/json"
        }
      },
      {
        "id": "node3",
        "proxy": {
          "prefix": "/node"
        }
      },
      {
        "id": "type1",
        "proxy": {
          "prefix": "/typescript"
        }
      },
      {
        "id": "type4",
        "proxy": {
          "prefix": "/ts2"
        }
      }
    ]
  }
}
