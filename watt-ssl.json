{
  "$schema": "https://schemas.platformatic.dev/wattpm/2.63.2.json",
  "server": {
    "hostname": "127.0.0.1",
    "port": 3043,
    "https": {
      "requestCert": false,
      "rejectUnauthorized": false,
      "key": { "path": "ssl/server.key" },
      "cert": { "path": "ssl/server.crt" }
    }
  },
  "logger": {
    "level": "info"
  },
  "health": {
    "maxYoungGeneration": 134217728
  },
  "metrics": {
    "enabled": true,
    "endpoint": "/metrics",
    "hostname": "127.0.0.1",
    "port": 8008
  },
  "workers": 2,
  "entrypoint": "composer",
  "web": [
    {
      "id": "composer",
      "path": "./composer"
    },
    {
      "id": "fastify2",
      "path": "./fastify2"
    },
    {
      "id": "fastify3",
      "path": "./fastify3"
    },
    {
      "id": "node3",
      "path": "./node3"
    },
    {
      "id": "type1",
      "path": "./type1"
    },
    {
      "id": "type4",
      "path": "./type4"
    }
  ]
